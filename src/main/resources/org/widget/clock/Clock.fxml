<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<Pane style="-fx-background-color: transparent" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.widget.clock.ClockController">
      <Label fx:id="clockLabel" alignment="CENTER" contentDisplay="CENTER" graphicTextGap="0.0" onMouseClicked="#labelOnClick" onMouseDragged="#labelOnDragged" onMousePressed="#labelOnPressed" style="-fx-background-color: rgba(120,144,156,0.7); -fx-background-radius: 5 5 5 5;" text="Sample" textAlignment="CENTER" textFill="#000000de" wrapText="true">
      <font>
         <Font size="20.0" />
      </font>
      <effect>
         <DropShadow blurType="GAUSSIAN" height="7.0" radius="3.0" width="7.0">
            <color>
               <Color opacity="0.7" />
            </color>
         </DropShadow>
      </effect>
      <padding>
         <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
      </padding>
      <contextMenu>
         <ContextMenu style="-fx-min-width: 100" >
           <items>
             <MenuItem mnemonicParsing="false" text="Settings" onAction="#settingsMenuAction" />
             <MenuItem mnemonicParsing="false" text="Exit" onAction="#exitMenuAction" />
           </items>
         </ContextMenu>
      </contextMenu>
      </Label>
</Pane>
